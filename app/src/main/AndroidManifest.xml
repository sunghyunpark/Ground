<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yssh.ground">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GroundApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="view.IntroActivity" />
        <activity android:name="view.RegisterActivity" />
        <activity android:name="view.LoginActivity" />
        <activity android:name="view.AreaBoardActivity" />
        <activity
            android:name="view.WriteBoardActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name="view.DetailArticleActivity" />
        <activity android:name="view.CommentActivity" />
        <activity android:name="view.MyActivity"></activity>
    </application>

</manifest>