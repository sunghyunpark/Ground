<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eff0f1"
    tools:context="view.AppPushActivity">

    <RelativeLayout
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorBlack">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:background="@mipmap/back_img_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_push_activity_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="18dp"/>
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9e9e9e"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="매치/용병/모집"/>

    <RelativeLayout
        android:id="@+id/match_comment_push_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/layout_round_shape_white_top"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/match_comment_push_on_off_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:text="@string/match_comment_push_title"/>
            <TextView
                android:id="@+id/match_comment_push_on_off_sub_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#9e9e9e"
                android:text="@string/match_comment_push_sub"/>
        </LinearLayout>
        <ToggleButton
            android:id="@+id/match_comment_push_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff=""
            android:textOn=""
            android:background="@mipmap/checked_img"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/match_push_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/colorWhite"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/match_push_on_off_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:text="@string/match_push_title"/>
            <TextView
                android:id="@+id/match_push_on_off_sub_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#9e9e9e"
                android:text="@string/match_push_sub"/>
        </LinearLayout>

        <ToggleButton
            android:id="@+id/match_push_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff=""
            android:textOn=""
            android:background="@mipmap/checked_img"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9e9e9e"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="자유게시판"/>

    <RelativeLayout
        android:id="@+id/free_comment_push_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingTop="10dp"
        android:background="@drawable/layout_round_shape_white"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/free_comment_push_on_off_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:text="@string/free_comment_push_title"/>
            <TextView
                android:id="@+id/free_comment_push_on_off_sub_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#9e9e9e"
                android:text="@string/free_comment_push_sub"/>
        </LinearLayout>
        <ToggleButton
            android:id="@+id/free_comment_push_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff=""
            android:textOn=""
            android:background="@mipmap/checked_img"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9e9e9e"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="이벤트"/>

    <RelativeLayout
        android:id="@+id/event_push_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_round_shape_white"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/event_push_on_off_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:text="@string/event_push_title"/>
            <TextView
                android:id="@+id/event_push_on_off_sub_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#9e9e9e"
                android:text="@string/event_push_sub"/>
        </LinearLayout>
        <ToggleButton
            android:id="@+id/event_push_toggle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff=""
            android:textOn=""
            android:background="@mipmap/checked_img"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>

    <!--구분선-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:background="#ffe0e0e0"></LinearLayout>

</LinearLayout>