<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="view.AboutBoardActivity">

    <RelativeLayout
        android:id="@+id/app_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:background="@mipmap/back_img"/>
        <TextView
            android:id="@+id/area_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/back_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"/>
    </RelativeLayout>
    <!--구분선-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:orientation="horizontal"
        android:background="#9E9E9E"></LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profile_iv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/nick_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/profile_iv"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorMoreGray"
                        android:textSize="14dp"/>

                    <TextView
                        android:id="@+id/created_at_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nick_name_tv"
                        android:layout_toRightOf="@+id/profile_iv"
                        android:textSize="14dp"
                        android:textColor="@color/colorMoreGray"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/view_cnt_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/created_at_tv"
                        android:layout_below="@+id/nick_name_tv"
                        android:textColor="@color/colorMoreGray"
                        android:textSize="14dp"
                        android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="#E0E0E0"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/favorite_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="0.5dp"
                        android:layout_marginRight="0.5dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/favorite_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/about_article_activity_favorite_btn"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:textColor="@color/colorMoreGray"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_toLeftOf="@+id/favorite_tv"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/favorite_img"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/comment_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0.5dp"
                        android:background="@color/colorWhite"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/comment_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_article_activity_comment_btn"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:textColor="@color/colorMoreGray"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_toLeftOf="@+id/comment_tv"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/comment_img"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/share_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="0.5dp"
                        android:layout_marginLeft="0.5dp"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/share_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/about_article_activity_share_btn"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="15dp"
                            android:textColor="@color/colorMoreGray"/>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_toLeftOf="@+id/share_tv"
                            android:layout_marginRight="5dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/share_img"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <!--구분선-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:orientation="horizontal"
                android:background="#E0E0E0"></LinearLayout>

            <TextView
                android:id="@+id/contents_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:layout_marginTop="15dp"
                android:padding="15dp"/>

            <!--구분선-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="#E0E0E0"></LinearLayout>

            <TextView
                android:id="@+id/empty_comment_tv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:textSize="15dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/colorMoreGray"
                android:text="등록된 댓글이 없습니다."/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comment_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/comment_shape">

                <EditText
                    android:id="@+id/comment_et"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:background="@null"
                    android:padding="15dp"
                    android:textSize="14dp"
                    android:gravity="top"
                    android:hint="@string/about_article_activity_comment_hint"/>

                </android.support.v4.widget.NestedScrollView>
                <Button
                    android:id="@+id/write_comment_btn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"
                    android:layout_marginBottom="15dp"
                    android:text="@string/about_article_activity_write_comment_btn"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>