<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:id="@+id/item_layout"
    android:background="#E0E0E0"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginBottom="0.5dp"
        android:layout_weight="1.5">

        <ImageView
            android:id="@+id/new_iv"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/new_circle_shape"/>

        <TextView
            android:id="@+id/match_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_toRightOf="@+id/new_iv"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/match_state_tv"
            android:layout_marginLeft="3dp"
            android:textColor="@color/colorBlack"
            android:maxLines="2"
            android:paddingLeft="7dp"
            android:paddingRight="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginRight="35dp"
            android:layout_below="@+id/title_tv">

            <TextView
                android:id="@+id/nick_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/colorMoreGray"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/created_at_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textColor="@color/colorMoreGray"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/view_cnt_img"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/view_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="12dp"
                android:textColor="@color/colorMoreGray"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginBottom="0.5dp"
        android:layout_weight="8.5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        <RelativeLayout
            android:id="@+id/comment_cnt_layout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/comment_cnt_shape">
            <TextView
                android:id="@+id/comment_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment_cnt_layout"
            android:text="댓글"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorPrimary"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
