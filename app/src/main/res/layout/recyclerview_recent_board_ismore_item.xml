<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_layout"
    android:background="#E0E0E0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_marginBottom="0.5dp">

        <ImageView
            android:id="@+id/new_iv"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/new_circle_shape"/>

        <TextView
            android:id="@+id/area_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/area_tv"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <LinearLayout
            android:id="@+id/article_etc_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_tv"
            android:layout_marginTop="5dp"
            android:paddingLeft="7dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/colorMoreGray"/>

            <TextView
                android:id="@+id/play_rule_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/match_etc_info_shape"
                android:textColor="@color/colorMoreGray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/article_etc_info_layout">

            <TextView
                android:id="@+id/nick_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/colorMoreGray"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/comment_img2"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/comment_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="12dp"
                android:textColor="@color/colorMoreGray"/>


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/view_cnt_img"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/view_cnt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textSize="12dp"
                android:textColor="@color/colorMoreGray"/>

            <TextView
                android:id="@+id/created_at_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textColor="@color/colorMoreGray"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>